# Use CocoaPods CDN for faster, more reliable dependency resolution
source 'https://cdn.cocoapods.org/'

# Set minimum iOS deployment target  
platform :ios, '16.0'

# Disable CocoaPods analytics for faster builds
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Flutter application path helper
def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. Run 'flutter pub get' first."
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}"
end

# Load Flutter podhelper for automated pod management
require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

# Initialize Flutter iOS podfile setup
flutter_ios_podfile_setup

target 'Runner' do
  # Required for Flutter plugins and modern iOS development
  use_frameworks!
  use_modular_headers!

  # Install all Flutter iOS pods automatically
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  target 'RunnerTests' do
    inherit! :search_paths
  end
end

# Post-install configuration for consistent deployment targets and build settings
post_install do |installer|
  installer.pods_project.targets.each do |target|
    # Apply Flutter's additional iOS build settings
    flutter_additional_ios_build_settings(target)
    
    target.build_configurations.each do |config|
      # Ensure minimum deployment target across all pods
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '16.0'
      
      # Disable bitcode (not required for iOS 14+, causes build issues)
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      
      # Set valid architectures for both Intel and Apple Silicon Macs
      config.build_settings['VALID_ARCHS'] = 'arm64 x86_64'
      
      # Enable modules for Swift interoperability
      config.build_settings['DEFINES_MODULE'] = 'YES'
      
      # Suppress warnings for cleaner builds
      config.build_settings['CLANG_WARN_QUOTED_INCLUDE_IN_FRAMEWORK_HEADER'] = 'NO'
    end
  end
end   # âœ… THIS WAS MISSING
